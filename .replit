modules = ["php-8.2", "web", "nodejs-20"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Laravel Development Server"

[[workflows.workflow]]
name = "Laravel Development Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "export DB_CONNECTION=sqlite && export DB_DATABASE=$PWD/database/database.sqlite && npx concurrently -c \"#93c5fd,#c4b5fd,#fdba74\" \"php artisan serve --host=0.0.0.0 --port=5000\" \"php artisan queue:listen --tries=1\" \"npm run dev\" --names='server,queue,vite'"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5173
externalPort = 5173

[[ports]]
localPort = 46047
externalPort = 3000
